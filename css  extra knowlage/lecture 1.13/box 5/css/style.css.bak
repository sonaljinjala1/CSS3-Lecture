*{
	margin:0px;
	padding:0px;
	box-sizing:border-box;
}
.container{
	max-width:1140px;
	margin:40px auto;
}
.main
{
	width:80%;
	height:300px;
	background-color:white;
	box-shadow:0px 0px 20px 2px black;
}
.box
{
	width:95%;
	height:260px;
	background-color:white;
	left:20px;
	bottom:-20px;
	position:relative;
}
.main .box h2{
	width:100%;
	display:inline-block;
	text-align:center;
	letter-spacing:2px;
	word-spacing:5px;
	font-size:50px;
	position:absolute;
	top:50px;
	color:red;
}
 .main .box h3{
	text-align:center;
	color:gray;
	position:absolute;
	padding:40px;
	letter-spacing:1px;
	top:50px;
	left:250px;
	margin:30px;
	font-style:italic;
	font-size:30px;
}
.box h3::after{
	position:absolute;
	content:'';
	width:40%;
	height:7px;
	background-color:red;
	bottom:0;
	left:50%;
}
.box h3::before{
	position:absolute;
	content:'   ';
	width:70%;
	height:7px;
	background-color:gray;
	right:20%;
	bottom:0;
}