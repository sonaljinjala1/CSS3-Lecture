*
{
	margin:0px;
	padding:0px;
	box-sizing:border-box;
}
.container
{
	max-width:1140px;
	margin:0px auto;
	
}
.main{
	width:100%;
	height:500px;
	border:2px solid black;
	display:flex;
	padding:3px 0px;
}
.main .box
{
	width:100%;
	height:500px;
	overflow:hidden;
}
.main .box img
{
	width:100%;
	height:490px;
	object-fit:cover;
	transition:0.5s;
}
.head
{
	text-align:center;
	text-decoration:underline;
	padding:10px;
	color:white;
	background: rgb(44,53,57);
	background: linear-gradient(90deg, rgba(44,53,57,1) 7%, rgba(3,62,62,1) 31%, rgba(0,124,128,1) 46%, rgba(3,62,62,1) 69%, rgba(44,53,57,1) 95%);
}
.content p
{
	background-color:#045F5F;
	color:white;
	padding:10px;
	text-align:justify;
	word-spacing:0.5px;
	background: rgb(44,53,57);
    background: linear-gradient(90deg, rgba(44,53,57,1) 7%, rgba(3,62,62,1) 31%, rgba(0,124,128,1) 46%, rgba(3,62,62,1) 69%, rgba(44,53,57,1) 95%);
}
.main .box:first-child:hover img
{
	transform:rotatex(180deg);
}
.main .box:nth-child(2):hover img
{
	transform:scale(1.5);
}
.main .box:nth-child(3):hover img
{
	transform:skewx(180deg);
}
.main .box:nth-child(4):hover img
{
	transform:scalex(1.5);
} 
.head i{
	position:sticky;
	top:0px;
}