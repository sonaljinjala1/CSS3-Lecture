*
{
	margin:0;
	padding:0;
	box-sizing:border-box;
}
.container
{
	max-width:1140px;
	margin:50px auto;
}
.main
{
	position:relative;
}
.btn1
{
	width:380px;
	height:100px;
	background-color:red;
	color:white;
	text-align:center;
	padding:20px;
	letter-spacing:7px;
}
.btn1::after
{
	position:absolute;
	content:' ';
	width:250px;
	height:3px;
	background-color:white;
	bottom:50%;
	left:50;
	transform:translate(-50%);
}
h6
{
	margin:10px;
	letter-spacing:5px;
}
.btn1:hover::after
{
	position:absolute;
	content:'**************************';
	width:380px;
	color:white;
	top:0%;
	left:50;
	transform:translate(-50%);
}